<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title><%= (typeof title !== 'undefined' ? title : 'Sign in') %></title>
</head>
<body class="auth-page">
  <%- include('./partials/nav') %>

  <main class="auth-container">
    <div class="auth-card" role="main" aria-labelledby="signin-heading">
      <!-- Big, clear heading -->
      <h1 id="signin-heading" class="display-6 mb-1">Sign in</h1>
      <p class="text-muted mb-4">Welcome back — sign in to access your dashboard and posts.</p>

      <% if (locals.error) { %>
        <div class="alert alert-danger" role="alert"><%= locals.error %></div>
      <% } %>

      <form action="/user/signin" method="post" class="form-auth" novalidate>
        <div class="mb-3">
          <label for="email" class="form-label small">Email address</label>
          <input id="email" name="email" type="email" class="form-control form-control-lg" placeholder="you@company.com" required aria-required="true" />
          <div id="emailHelp" class="form-text small">We'll never share your email with anyone else.</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label small">Password</label>
          <input id="password" name="password" type="password" class="form-control form-control-lg" placeholder="••••••••" required aria-required="true" />
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="1" id="remember" name="remember">
            <label class="form-check-label small" for="remember">Remember me</label>
          </div>
          <a class="small" href="/user/forgot">Forgot?</a>
        </div>

        <div class="d-grid mb-3">
          <button class="btn btn-primary btn-lg" type="submit">Sign in</button>
        </div>

        <div class="text-center small">
          Don’t have an account? <a href="/user/signup">Create one</a>
        </div>
      </form>
    </div>
  </main>

  <%- include('./partials/scripts') %>
</body>
</html>
