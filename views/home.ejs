<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title><%= (typeof title !== 'undefined' ? title : 'Home Page') %></title>


</head>
<body>
  <%- include('./partials/nav') %>

  <main class="container mt-4">

    <!-- HERO: centered content and CTA -->
    <section class="hero" role="region" aria-label="Create your blog">
      <div class="hero-inner">
        <h1>Publish your passions, your way</h1>
        <p class="lead">Create a unique and beautiful blog easily.</p>

        <% if (locals.user) { %>
          <a href="/blog/add-new" class="cta-btn" role="button" aria-label="Create your blog">Create your blog</a>
        <% } else { %>
          <!-- visible CTA for non-logged-in users that points to signup/login -->
          <a href="/auth/signup" class="cta-btn" role="button" aria-label="Sign up to create a blog">Create your blog</a>
        <% } %>
      </div>
    </section>

    <!-- Existing Latest Posts header (Create post button removed) -->
    <div class="d-flex align-items-center justify-content-between mb-3">
      <div>
        <h2 class="h4 mb-0">Latest Posts</h2>
        <p class="small text-muted mb-0">Fresh stories from Blogify.</p>
      </div>
    </div>

    <div class="row g-4 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4">
      <% if (!blogs || blogs.length === 0) { %>
        <div class="col">
          <div class="card placeholder-card h-100 text-center p-5">
            <div class="mb-3 display-6">ðŸ˜¶</div>
            <h5 class="card-title">No posts yet</h5>
            <p class="text-muted small">Create the first blog and it will appear here.</p>
            <% if (locals.user) { %>
              <a href="/blog/add-new" class="btn btn-sm btn-outline-primary mt-3">Write a post</a>
            <% } %>
          </div>
        </div>
      <% } else { %>
        <% blogs.forEach(blog => { %>
          <div class="col">
            <article class="card blog-card h-100">
              <div class="card-img-top-wrapper">
                <% if (blog.coverImageURL) { %>
                  <img
                    src="<%= blog.coverImageURL %>"
                    alt="<%= blog.title %> cover"
                    class="card-img-top"
                    loading="lazy"
                    onerror="this.onerror=null;this.src='/images/default.png'"
                  />
                <% } else { %>
                  <img src="/images/default.png" alt="placeholder" class="card-img-top" loading="lazy" />
                <% } %>
              </div>

              <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-1">
                  <a class="stretched-link title-link" href="/blog/<%= blog._id %>"><%= blog.title %></a>
                </h5>

                <p class="card-text text-muted small mb-3 excerpt">
                  <%= blog.body.substring(0, 100) + '...' %>
                </p>

                <div class="mt-auto d-flex justify-content-between align-items-center">
                  <div class="meta small text-muted">
                    <span class="author"><%= blog.createdBy.name %></span>
                    <span class="mx-1">â€¢</span>
                    <time datetime="<%= blog.createdAt %>"><%= new Date(blog.createdAt).toLocaleDateString() %></time>
                  </div>
                  <a href="/blog/<%= blog._id %>" class="btn btn-sm btn-outline-primary">Read More</a>
                </div>
              </div>
            </article>
          </div>
        <% }) %>
      <% } %>
    </div>
  </main>

  <%- include('./partials/scripts') %>
</body>
</html>
